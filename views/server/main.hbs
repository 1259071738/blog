
<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{title}}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="/assets/server/img/favicon.ico" type="image/x-icon">
    <!-- Bootstrap core CSS-->
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap dialog-->
    <link href="https://cdn.bootcss.com/bootstrap3-dialog/1.35.4/css/bootstrap-dialog.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/limonte-sweetalert2/6.6.10/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/plugins/messenger/css/messenger.css">
    <link rel="stylesheet" href="/assets/plugins/messenger/css/messenger-theme-flat.css">
    <!-- Bootstrap datetimepicker-->
    <link rel="stylesheet" href="/assets/plugins/datetimepicker/css/bootstrap-datetimepicker.min.css">
    <!-- Fonts from Font Awsome-->
    <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Animate-->
    <link href="https://cdn.bootcss.com/animate.css/3.5.2/animate.min.css" rel="stylesheet">
    <!-- Custom styles for this theme-->
    <link rel="stylesheet" href="/assets/server/css/main.css">
    <link rel="stylesheet" href="/assets/server/css/style.css">
</head>
<body>
<section id="container">
    <header id="header">
        <!-- logo start-->
        <div class="brand"><a href="{{adminDir}}" class="logo">汉银管理后台
            <!--| 实验室--></a></div>
        <!-- logo end-->
        <div class="toggle-navigation toggle-left">
            <button id="toggle-left" type="button" data-toggle="tooltip" data-placement="left" title="切换左栏" class="btn btn-default"><i class="fa fa-bars"></i></button>
        </div>

        <!--top menu-->
        <div class="header-menu">
             <div class="top-tab">
                 <ul class="nav nav-pills">
                     <li role="presentation"><a href="#">工作台</a></li>
                     <li role="presentation" class="{{#compare Path '===' 'client'}}active{{else}}{{/compare}}"><a href="{{adminDir}}/client/">客户管理</a></li>
                     <li role="presentation"><a href="#">项目管理</a></li>
                     <li role="presentation" class="{{#compare Path '===' 'human'}}active{{else}}{{/compare}}"><a href="{{adminDir}}/human/">人事管理</a></li>
                 </ul>
             </div>
        </div>
        <!--top menu-->

        <div class="user-nav">
            <ul>
                {{#if User}}
                    <li class="profile-photo"><img src="{{avatar User.email}}" alt="" class="img-circle">
                </li>
                    <li class="dropdown settings"><a data-toggle="dropdown" href="" class="dropdown-toggle">{{User.name}}<i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{adminDir}}/me"><i class="fa fa-user"></i> 个人资料</a></li>
                        <!--li
                        a(href='index.html#')
                            i.fa.fa-envelope
                            |  消息
                            span#user-inbox.badge.badge-danager 5
                        -->
                        <li><a href="{{adminDir}}/user/logout"><i class="fa fa-power-off"></i> 登出</a></li>
                    </ul>
                </li>
               {{/if}}
            </ul>
        </div>
    </header>
    <!-- sidebar left start-->
    <aside class="sidebar">
        <div id="leftside-navigation" class="nano">
            <ul class="nano-content">
                {{#hasMoudle User Roles Actions 'CLIENT_INDEX'}}
                   <li class="sub-menu active"><a href="javascript:void(0);"><i class="fa fa-male" style="color:#ff6450"></i><span>客户</span></a>
                    <ul>

                        <li class="{{#compare Menu '===' 'myclient'}}active{{else}}{{/compare}}"><a href="{{adminDir}}/client">我的客户</a></li>
                        <li class="{{#compare Menu '===' 'mysubclient'}}active{{else}}{{/compare}}"><a href="{{adminDir}}/client/mysubclient">下属的客户</a></li>
                    </ul>
                  </li>
                {{else}}{{/hasMoudle}}
                {{#hasMoudle User Roles Actions 'CONTACTS_INDEX'}}
                    <li class="sub-menu {{#compare Menu '===' 'contact'}}on{{else}}{{/compare}} "><a href="{{adminDir}}/contact" title="{{Menu}}"><i class="fa fa-reorder" style="color:#63e663"></i><span>联系人</span></a></li>
                {{else}}{{/hasMoudle}}
               {{#hasMoudle User Roles Actions 'CLIENT_INDEX'}}
                <li class="sub-menu {{#compare Menu '===' 'opensea'}}on{{else}}{{/compare}}"><a href="{{adminDir}}/client/opensea"><i class="fa fa-users" style="color:#6ed6ef"></i><span>公海</span></a></li>
               {{else}}{{/hasMoudle}}
            </ul>
        </div>
    </aside>
    <!-- sidebar left end-->
    <!-- main content start-->
    {{{body}}}
    <!-- main content end-->
</section>
<!-- Global JS-->
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.bootcss.com/jquery.form/4.2.0/jquery.form.min.js"></script>
<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdn.bootcss.com/bootstrap3-dialog/1.35.4/js/bootstrap-dialog.min.js"></script>
<script src="https://cdn.bootcss.com/limonte-sweetalert2/6.6.10/sweetalert2.min.js"></script>
<script src="/assets/plugins/messenger/js/messenger.min.js"></script>
<!-- Bootstrap datetimepicker-->
<script src="/assets/plugins/datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
<script src="/assets/plugins/messenger/js/messenger-theme-future.js"></script>
<script src="https://cdn.bootcss.com/mustache.js/2.3.0/mustache.min.js"></script>
<script src="/assets/server/js/application.js"></script>
<!-- Load these page level functions-->
    {{{_sections.scripts}}}
</body>
</html>