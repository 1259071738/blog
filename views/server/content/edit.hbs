<div class="col-md-12">

    <p class="lead">
        <a class="btn btn-default btn-sm" href="{{adminDir}}/content/" role="button">文章列表</a>
        <a class="btn btn-default btn-sm" href="{{adminDir}}/content/add" role="button">新增文章</a>
    </p>

    <form action="" method="post">
        <div class="form-group">
            <label>标题</label>
            <input name="title" class="form-control" value='{{content.title}}'>
        </div>
        <div class="form-group">
            <label>分类</label>
            <select name="category" class="form-control input-sm">
                <option value="">请选择</option>

                {{#each categorys}}
                    <option value="{{id}}" {{#compare ../content.category '==' id}}selected{{else}}{{/compare}} >{{name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label>关键字</label><span>(一个以上关键字请用英文半角逗号,隔开)</span>
            <input name="keywords" class="form-control" value="{{content.keywords}}">
        </div>
        <div class="form-group">
            <label>图集</label>
            <div id="J_gallery" class="gallery">
                 {{#each content.gallery}}
                     <div class="gallery-item">
                         <img src="{{url}}" class="gallery-image">
                          <input type="hidden" name="gallery[]" value="{{id}}">
                         <a href="" class="gallery-remove J_del"
                            data-token="{{../token}}"
                            data-type="ajax"
                            data-url="{{../adminDir}}/file/{{id}}/del"
                            data-toggle="modal"
                            data-target="#myModal">
                             <span class="fa fa-times-circle">

                             </span>
                         </a>
                         <div class="checkbox setThumb">
                             <label>

                                 <input type="checkbox"
                                     {{#compare ../content.thumb '==' id}} checked{{else}}{{/compare}}
                                        class="setThumbCk" value="{{id}}">
                                 设为缩略图
                             </label>
                         </div>
                         <a class="insertContent btn btn-default btn-xs" data-imgUrl="{{url}}">插入到文章</a>

                     </div>
                     {{/each}}
                <input type="hidden" name="thumb" value="{{id}}">
            </div>
            <span class="btn btn-default fileinput-button"><span>添加图片</span>
                <input id="fileupload" type="file" name="files[]" multiple="multiple">
            </span>
            <div id="progress" class="progress progress-striped mgt10">
                <div class="progress-bar progress-bar-default progress-bar-success"></div>
            </div>
        </div>
        <div class="form-group">
            <label>内容</label>
            <textarea id="J_editor" name="content" rows="20" style="background-color: rgb(255, 255, 255); border: none;" class="form-control">{{content.content}}</textarea>
        </div>
        <input type="hidden" name="_csrf" value="{{token}}">
        <button type="submit" class="btn btn-default">提交</button>
    </form>
</div>

<!-- Load these page level functions-->
    {{#section 'scripts'}}
    <script type="text/javascript">
        /*  在textarea处插入文本--Start */
        $.fn.extend({
            insertContent : function(myValue, t) {
                var $t = $(this)[0];
                if (document.selection) { // ie
                    this.focus();
                    var sel = document.selection.createRange();
                    sel.text = myValue;
                    this.focus();
                    sel.moveStart('character', -l);
                    var wee = sel.text.length;
                    if (arguments.length == 2) {
                        var l = $t.value.length;
                        sel.moveEnd("character", wee + t);
                        t <= 0 ? sel.moveStart("character", wee - 2 * t
                                - myValue.length) : sel.moveStart(
                                "character", wee - t - myValue.length);
                        sel.select();
                    }
                } else if ($t.selectionStart
                        || $t.selectionStart == '0') {
                    var startPos = $t.selectionStart;
                    var endPos = $t.selectionEnd;
                    var scrollTop = $t.scrollTop;
                    $t.value = $t.value.substring(0, startPos)
                            + myValue
                            + $t.value.substring(endPos,
                                    $t.value.length);
                    this.focus();
                    $t.selectionStart = startPos + myValue.length;
                    $t.selectionEnd = startPos + myValue.length;
                    $t.scrollTop = scrollTop;
                    if (arguments.length == 2) {
                        $t.setSelectionRange(startPos - t,
                                $t.selectionEnd + t);
                        this.focus();
                    }
                } else {
                    this.value += myValue;
                    this.focus();
                }
            }
        })
        /* 在textarea处插入文本--Ending */
    var token = '{{token}}';

    $(function () {
        var mditor =  Mditor.fromTextarea(document.getElementById('J_editor'));
        mditor.split = false;

        $('#fileupload').fileupload({
            //url: '/upload',
            url: '/admin/file/add',
            formData: {
                _csrf: '{{token}}'
            },
            dataType: 'json',
            progressall: function(e, data) {
                //console.log(e, data);
                var progress = parseInt(data.loaded / data.total * 100, 10);
                //console.log(progress)
                $('#progress .progress-bar').css(
                        'width',
                        progress + '%'
                ).text(progress + '%')
            },
            done: function (e, data) {
                $('#progress .progress-bar').addClass('progress-bar-success').css(
                        'width',
                        100 + '%'
                ).text('100%')
                $.each(data.result.files, function (index, file) {
                    console.log(file)
                    var url = file.md_url || file.url,
                        id = file._id;
                    var html = ' <div class="gallery-item"><img src="'+ url +'" class="gallery-image">' +
                            ' <input type="hidden" name="gallery[]" value="'+ id +'">' +
                            '<a data-token="'+token+'" ' +
                            'data-type="ajax" ' +
                            'data-url="/admin/file/' + id + '/del" ' +
                            'class="gallery-remove" ' +
                            'data-toggle="modal" ' +
                            'data-target="#myModal">' +
                            '<span class="fa fa-times-circle"></span>' +
                            '</a>' +
                            '    <div class="checkbox setThumb">' +
                            '           <label>' +
                            '              <input type="checkbox" class="setThumbCk" value='+ id +'> 设为缩略图' +
                            '           </label>' +
                            '    </div>'+
                            '<a class="insertContent btn btn-default btn-xs">插入到文章</a>'+
                            ' </div>'
                    $('#J_gallery').append(html)
                })
            }
        })

        $('#J_gallery').on('click','.setThumbCk',function(){
            var  $galleryItem =  $(this).parents('.gallery-item'),
                    id=$(this).val(),
                    $thumb = $(this).parents('#J_gallery').find('input[name="thumb"]')

            if ($(this).prop("checked")) {
                $galleryItem.siblings().find('.setThumbCk').prop('checked',false)
                $thumb.val(id)
            }else{
                $thumb.val('')
            }

        })
        $('#J_gallery').on('click','.insertContent',function(){
            var     imgUrl = $(this).siblings('img').attr('src'),
                    index=imgUrl.lastIndexOf("/uploaded"),
                    imgUrl=imgUrl.substring(index,imgUrl.length),
                    mdStr = '![alt]('+ imgUrl +')'
                $('.textarea').insertContent(mdStr+"\n")
        })


    })
    </script>
    {{/section}}
