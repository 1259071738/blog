extends ../layout

block content
    .row
        .col-md-12
            a.btn.btn-info(href='#{adminDir}/daily/add') 添加日报
            table.table.table-striped
                thead
                    tr
                        th 日期
                        th 作者
                        th 项目
                        th 任务
                        th 时间计划
                        th 预估工作量
                        th 累计投入量
                        th 昨天投入时间
                        th 总体进度
                        th 今天计划投入时间
                        th 状态
                        th 备注
                        th 操作
                tbody
                    - each daily in dailies
                        tr
                            td
                                | #{daily.date}
                            td
                                if (daily.author)
                                    | #{daily.author.name}
                            td
                                | #{daily.project}
                            td
                                | #{daily.task}
                            td
                                | #{daily.schedule}
                            td
                                | #{daily.estimated_workload}
                            td
                                | #{daily.cumulative_input}
                            td
                                | #{daily.yesterday_input_hours}
                            td
                                | #{daily.current_progress}
                            td
                                | #{daily.today_plan_hours}
                            td
                                | #{daily.state}
                            td
                                | #{daily.remarks}

                            td
                                a.btn.btn-default.btn-xs(href='#{adminDir}/daily/#{daily.id}/edit') 编辑
                                | &nbsp;
                                a.btn.btn-danger.btn-xs.J_del(href='#{adminDir}/daily/#{daily.id}/del') 删除
            if (pageInfo && pageInfo.totalPage > 1)
                - pageInfo.query = query
                include ../mixin
                +pagination(pageInfo)
