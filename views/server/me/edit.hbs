<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">修改我的信息</h3>
            </div>
            <div class="panel-body">
                <form role="form" action="{{adminDir}}/me/edit" method="post" class="form-horizontal">
                    <!--.form-group
                    label.col-sm-2.control-label(for='inputEmail2') 用户名
                    .col-sm-10
                        input#inputEmail2.form-control(type='text', name='username', value='', placeholder='用户名')
                    -->
                    <div class="form-group">
                        <label for="inputPassword4" class="col-sm-2 control-label">姓名</label>
                        <div class="col-sm-10">
                            <input id="inputPassword4" type="text" name="name" value="{{user.name}}" placeholder="姓名" class="form-control">
                        </div>
                    </div>
                    <!--.form-group
                    label.col-sm-2.control-label(for='inputPassword5') Email
                    .col-sm-10
                        input#inputPassword5.form-control(type='email', name='email', value='' placeholder='Email')
                    -->
                    <div class="form-group">
                        <label for="inputPassword6" class="col-sm-2 control-label">手机号</label>
                        <div class="col-sm-10">
                            <input id="inputPassword6" type="mobile" name="mobile" value="{{user.mobile}}" placeholder="手机号" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="J_birthday" class="col-sm-2 control-label">生日</label>
                        <div class="col-sm-10">
                            <input id="J_birthday" type="text" name="birthday" value="{{dateFormat user.birthday 'yyyy-MM-dd'}}" placeholder="生日" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword5" class="col-sm-2 control-label">性别</label>
                        <div class="col-sm-10">
                            <select name="gender" class="form-control input-sm">
                                <option value="保密">保密</option>
                                <option value="男">男</option>
                                <option value="女">女</option>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" value="{{token}}">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>